<script>
    // Fun√ß√£o para mostrar ou ocultar o gabarito
    function toggleGabarito() {
        const gabaritos = document.querySelectorAll('.gabarito');
        gabaritos.forEach(gabarito => {
            if (gabarito.style.display === 'none' || gabarito.style.display === '') {
                gabarito.style.display = 'block';
            } else {
                gabarito.style.display = 'none';
            }
        });
    }
</script>

